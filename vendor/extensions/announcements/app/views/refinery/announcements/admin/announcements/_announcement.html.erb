<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(announcement) -%>">
  <span class='title'>
    <%= announcement.title %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.announcements_announcement_path(announcement),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_announcements_admin_announcement_path(announcement),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.announcements_admin_announcement_path(announcement),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :data => {:confirm => t('message', :scope => 'refinery.admin.delete', :title => announcement.title)},
        :method => :delete %>
  </span>
</li>
