<% content_for :body_content_title do %>
  <%= @breaking.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @breaking.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @breaking.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="breakings">
      <% @breakings.each do |breaking| %>
        <li>
          <%= link_to breaking.title, refinery.breakings_breaking_path(breaking) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
