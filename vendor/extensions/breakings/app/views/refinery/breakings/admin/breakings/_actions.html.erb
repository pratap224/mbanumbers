<ul>
  <% if ::Refinery::Breakings::Admin::BreakingsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.breakings_admin_breakings_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_breakings_admin_breaking_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Breakings::Admin::BreakingsController.sortable? && ::Refinery::Breakings::Breaking.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Breakings"),
                 refinery.breakings_admin_breakings_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Breakings"),
                 refinery.breakings_admin_breakings_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
